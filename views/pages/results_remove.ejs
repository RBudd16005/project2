<html>
    <head>
        <title>Removal Confirmation</title>
    </head>
    <body>
        <h1>Sound Removed Successfully From Library</h1>
        <h2>If you do not see the changes you made, refresh the page.</h2>
        <div id="body"></div>

        <script>
            var db = '<%-JSON.stringify(result)%>';
            var db_parsed = JSON.parse(db);
            var text_body = "";

            if (db_parsed.rowCount != 0) {
                var i;
                for (i = 0; i < db_parsed.rowCount; i++) {
                    text_body += "Title: " + db_parsed.rows[i].name + "<br>Author: " + db_parsed.rows[i].author + "<br>Date Uploaded: " + db_parsed.rows[i].created + "<br><br>";
                }
            }
            else {
                text_body = "No sounds in library <br>";
            }
            document.getElementById("body").innerHTML = text_body;
        </script>

        <form action="/" name="return" method="GET">
            <button type="submit" name="return_home">Return Home</button>
        </form>
    </body>
</html>