<html>
    <head>
        <title>Addition Confirmation</title>
    </head>
    <body>
        <h1>New Sound Added to Library</h1>
        <h2>If you do not see the changes you made, refresh the page.</h2>
        <div id="body"></div>

        <script>
            var rows = '<%= result.rows %>';
            console.log(Object.keys(rows).length);
            console.log(rows);
            var text_body = "";

            if (rows.length != 0) {
                var i;
                for (i = 0; i < rows.length; i++) {
                    text_body += "Title: " + rows[i].name + "<br>Author: " + rows[i].author + "<br>Date Uploaded: " + rows[i].created + "<br><br>";
                }
            }
            else {
                text_body = "No sounds in library <br>";
            }
            document.getElementById("body").innerHTML = text_body;
        </script>

        <form action="/" name="return" method="GET">
            <button type="submit" name="return_home">Return Home</button>
        </form>
    </body>
</html>